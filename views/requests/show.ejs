<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <link rel="stylesheet" href="/assets/css/query.css">
    <link rel="icon" type="image/png" href="/assets/images/favicon.png">
    <title>Queries</title>
</head>
<body>

<header>
    <%- include('../partials/_navbar.ejs') %>
</header>

    <h1>All Quieries</h1>

    

    <% requests.forEach((request)=>{ %>
        <% if(request.publisher.equals(user._id.toString() )){ %>

            <div id="information">
            <p><%= request.requestType %></p>
            <div id="query">
                <p id="description"> <%= request.description %> </p>
                <form action="/requests/<%= request._id%>?_method=DELETE" method="POST">
                    <button type="submit">Delete Query</button>
                </form> 
            </div>
            </div>
            

        <% } else if(userRequests.length === 0) { %>
            <h2>No quereis have been created </h2>
            <p>You can make a query  <strong> <a href="/requests">here</a></strong></p>
       <% } %>
     <% })  %>
    
</body>
</html>